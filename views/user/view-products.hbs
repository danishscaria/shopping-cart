  <section>
    <div class="container mt-5">
      <div class="row">
        {{#each products}}
        <div class="col-md-3 p-3">

          <div class="card" style="width: 13rem;">
            <img class="card-img-top" src="/product-images/{{this._id}}.jpg" style="height:250px; width:12rem;" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title">{{this.Name}}</h5>
              <p class="card-text">{{this.Brand}}</p>
              <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">add to cart</a>
            </div>
          </div>

        </div>
        {{/each}}
      </div>
    </div>
  </section>