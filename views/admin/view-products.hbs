<section>
    <div class="container">
     <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
     </div>

        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Price</th>
      <th scope="col">ITEMS</th>
      <th scope="col">Category</th>
      <th scope="col">Brand</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
{{#each products}}
    <tr>
      <th >{{this.Number}}</th>
      <td>{{this.Price}}</td>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Brand}}</td>
      <td ><img src="/product-images/{{this._id}}.jpg" style="height:50px; width:50px;"</td>
       <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick= "return confirm('do you want to delete {{this.Name}}')">Delete</a>
      
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>